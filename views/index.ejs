<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>

<body>

<%- include('navbar') -%>
<div class="container">
<h2 class="mt-3 mb-5 text-center">TOP Products in this week</h2>


<div class="row">

<% if (results.length <= 0) { %>
<h2 class="mt-5 mb-5 text-center">Ooops Sorry there is no product now</h2>
<% } else { %>
<% results.forEach(res => { %>

<div class="p-0 card col-3 my-5 mx-2" style="width: 17rem;">
  <img src="https://mediseva.online/img/default-product.jpg" class="card-img-top">
  <div class="card-body">
    <h3 class="card-text mb-4"><%= res.title %></h3>
    <p class="card-text m-0 mb-1">Price : <%= res.price %>$ </p>
    <p class="card-text">Descreption : <%= res.descreption %> </p>
	<a href="/product/<%= res._id %>" class="btn edit-btn btn-info">
		More <i class="far fa-edit"></i>
	</a>
  </div>
</div>

<% })} %>

</div>




</div>


<%- include('footer') -%>
<%- include('bootstrap_scripts') -%>
</body>
</html>