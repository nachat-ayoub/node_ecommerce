<body>

<%- include('navbar') -%>
<main class="container">

<h2 class="mt-3 mb-5 text-center">Edit Product</h2>

<form method="POST" action="/product/edit/<%= results._id %>">
 <input type="hidden" name="_method" value="PUT">
 
 <div class="form-group">
    <label for="title">Title</label>
    <input value="<%= results.title %>" type="text" class="form-control" name="title" id="title" placeholder="Product title">
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    <input value="<%= results.price %>" type="text" class="form-control" name="price" id="price" placeholder="Price">
  </div>

  <div class="form-group">
    <label for="descreption">Descreption</label>
    <textarea class="form-control" name="descreption" id="descreption" placeholder="Descreption"><%= results.descreption %></textarea>
  </div>

  <button type="submit" class='btn btn-success'>Update</button>
  <a href='/' class='btn btn-secondary'>Cancel</a>

</form>


</main>

